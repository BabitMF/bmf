<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BmfLite" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/blue_500</item>
    </style>

    <style name="Button.MainButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/main_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/main_button_margin</item>
        <item name="android:paddingStart">@dimen/main_button_padding</item>
        <item name="android:paddingEnd">@dimen/main_button_padding</item>
        <item name="android:background">@color/button_bg_light</item>
    </style>
</resources>